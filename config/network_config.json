{
  "network": {
    "protocol_version": "1.0",
    "network_id": "mainnet",
    "node_type": "pool"
  },
  "connection": {
    "listen_address": "0.0.0.0",
    "listen_port": 8444,
    "external_port": 8444,
    "external_host": "pool.example.com",
    "max_inbound_connections": 1000,
    "max_outbound_connections": 50,
    "target_outbound_connections": 8,
    "handshake_timeout_seconds": 30,
    "connection_timeout_seconds": 60
  },
  "peer_discovery": {
    "bootstrap_peers": [
      "pool1.chia.net:8444",
      "pool2.chia.net:8444",
      "pool3.chia.net:8444",
      "localhost:8444"
    ],
    "dns_servers": [
      "dns.int.chia.net",
      "dns.eu.chia.net",
      "dns.ap.chia.net"
    ],
    "peer_db_path": "/var/lib/chiapool/peer_table.db",
    "max_peers": 5000,
    "peer_connect_interval_seconds": 30,
    "peer_retry_interval_seconds": 300
  },
  "protocol": {
    "max_message_size": 67108864,
    "max_block_size": 4194304,
    "max_proof_size": 368,
    "max_signature_size": 96,
    "max_plot_size_k": 50,
    "min_plot_size_k": 25
  },
  "ssl": {
    "enabled": true,
    "private_cert_path": "/etc/pool/ssl/private_ca.crt",
    "private_key_path": "/etc/pool/ssl/private_ca.key",
    "public_cert_path": "/etc/pool/ssl/public.pem",
    "dhparams_path": "/etc/pool/ssl/dhparams.pem",
    "allowed_clients": [
      "/etc/pool/ssl/allowed_clients.crt"
    ],
    "require_client_cert": false,
    "cipher_suites": [
      "TLS_AES_256_GCM_SHA384",
      "TLS_CHACHA20_POLY1305_SHA256",
      "TLS_AES_128_GCM_SHA256"
    ]
  },
  "api": {
    "enable_http": true,
    "http_port": 8080,
    "enable_https": true,
    "https_port": 8443,
    "api_base_path": "/api/v1",
    "cors_allowed_origins": [
      "https://pool.example.com",
      "https://farmer.example.com"
    ],
    "rate_limiting": {
      "enabled": true,
      "requests_per_minute": 100,
      "burst_size": 20
    }
  },
  "websocket": {
    "enabled": true,
    "port": 8445,
    "max_connections": 10000,
    "ping_interval_seconds": 30,
    "pong_timeout_seconds": 10,
    "max_message_size": 1048576
  },
  "farmer_protocol": {
    "max_partial_size": 512,
    "max_challenge_size": 32,
    "max_launcher_id_size": 32,
    "max_signature_size": 96,
    "partial_timeout_seconds": 28,
    "authentication_required": true,
    "supported_versions": ["1.0", "1.1"]
  },
  "pool_protocol": {
    "max_pool_info_size": 1024,
    "max_farmer_info_size": 512,
    "max_points_size": 8,
    "supported_protocols": [
      "pool_protocol_v1"
    ]
  },
  "performance": {
    "worker_threads": 16,
    "io_threads": 8,
    "max_pending_operations": 10000,
    "operation_timeout_ms": 5000,
    "batch_verification_size": 8,
    "enable_compression": true
  },
  "monitoring": {
    "enable_metrics": true,
    "metrics_port": 9090,
    "enable_tracing": false,
    "tracing_sample_rate": 0.1,
    "health_check_endpoint": "/health",
    "readiness_endpoint": "/ready"
  },
  "security": {
    "enable_firewall": true,
    "allowed_subnets": [
      "0.0.0.0/0"
    ],
    "denied_subnets": [
      "10.0.0.0/8",
      "192.168.0.0/16"
    ],
    "max_connections_per_ip": 50,
    "syn_flood_protection": true,
    "ban_duration_minutes": 60,
    "max_login_attempts": 5
  },
  "logging": {
    "network_log_level": "info",
    "peer_log_level": "warn",
    "protocol_log_level": "debug",
    "enable_packet_logging": false,
    "log_file_path": "/var/log/chiapool/network.log"
  }
}
